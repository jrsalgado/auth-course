extends base
block vars
  - var title = "Login"
block body
  h1 Log Into Your Account
  if error
    p ERROR: #{error}
  form(method="post")
    span email
    input(type="email", name="email", required=true)
    br
    span password
    input(type="password", name="password", required=true)
    br
    input(type="submit", value="Login")
